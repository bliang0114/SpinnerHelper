    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="SpinnerConfig" factoryClass="cn.github.spinner.ui.SpinnerUIFactory" anchor="right"
                    icon="AllIcons.RunConfigurations.Remote"/>
        <!--        <toolWindow id="SpinnerDataView" factoryClass="ui.cn.gitee.spinner.SpinnerSettingFactory" anchor="right" icon="AllIcons.RunConfigurations.Remote"/>-->
